{% extends 'base.html.twig' %}

{% block body %}
<main>
    <div class="uk-container">
        <div class="errorMessage">
          {% for message in app.flashes("danger") %}
          <div class="uk-alert-danger" uk-alert>
              <a href class="uk-alert-close" uk-close></a>
              <p>{{ message }}</p>
          </div>
          {% endfor %}
          {% for message in app.flashes("success") %}
          <div class="uk-alert-success" uk-alert>
              <a href class="uk-alert-close" uk-close></a>
              <p>{{ message }}</p>
          </div>
          {% endfor %}
      </div>
    <div class="uk-container">
        <div class="uk-child-width-1-1" uk-grid>
            <form class="uk-grid-small" method="post" action="{{ path('editCategory', {id:category.id}) }}" uk-grid>
                {{ form_start(form) }}
                    <div class="uk-width-1-1">
                        {% if form_errors(form.name) %}
                            <div class="formError">{{form_errors(form.name)}}</div>
                        {% endif %}
                        <div class="uk-margin">
                            <div class="uk-inline uk-width-1-1">
                                <span class="uk-form-icon" uk-icon="icon: user"></span>
                                {{ form_widget(form.name) }}
                            </div>
                        </div>
                    </div>
                    <div class="uk-width-1-1">
                        {% if form_errors(form.color) %}
                            <div class="formError">{{form_errors(form.color)}}</div>
                        {% endif %}
                        <div class="uk-margin">
                            <div class="uk-inline uk-width-1-1">
                                <span class="uk-form-icon" uk-icon="icon: user"></span>
                                {{ form_widget(form.color) }}
                            </div>
                        </div>
                    </div>
                    <div class="uk-width-1-1">
                        {% if form_errors(form.parent) %}
                            <div class="formError">{{form_errors(form.parent)}}</div>
                        {% endif %}
                        <div class="uk-margin">
                            <div class="uk-inline uk-width-1-1">
                                {{ form_widget(form.parent) }}
                            </div>
                        </div>
                    </div>
                    <div class="uk-width-1-1">
                        <button type="submit" class="uk-button uk-button-primary uk-width-1-1 uk-margin-small-bottom">Modifier</button>
                    </div>
                {{ form_end(form) }}
            </form>
        </div>
    </div>
</main>
{% endblock %}
