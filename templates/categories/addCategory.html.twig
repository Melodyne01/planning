{% extends 'base.html.twig' %}

{% block title %}Hello ActivitiesController!{% endblock %}

{% block body %}
<main>
    <div class="uk-child-width-1-1@s" uk-grid>
        <form class="uk-grid-small" method="post" action="{{ path('addCategory') }}" uk-grid>
            {{ form_start(form) }}
                <div class="uk-width-1-1">
                    {% if form_errors(form.name) %}
                        <div class="formError">{{form_errors(form.name)}}</div>
                    {% endif %}
                    <div class="uk-margin">
                        <div class="uk-inline uk-width-1-1">
                            <span class="uk-form-icon" uk-icon="icon: user"></span>
                            {{ form_widget(form.name) }}
                        </div>
                    </div>
                </div>
                <div class="uk-width-1-1">
                    <button type="submit" class="uk-button uk-button-primary uk-width-1-1 uk-margin-small-bottom">Ajouter la categorie</button>
                </div>
            {{ form_end(form) }}
        </form>
    </div>
</main>
{% endblock %}
