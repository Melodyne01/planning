{% extends 'base.html.twig' %}

{% block body %}
<main>
    <div class="uk-container">
        <div class="uk-child-width-1-1" uk-grid>
            <form class="uk-grid-small" method="post" action="{{ path('addCategory') }}" uk-grid>
                {{ form_start(form) }}
                    <div class="uk-width-1-1">
                        {% if form_errors(form.name) %}
                            <div class="formError">{{form_errors(form.name)}}</div>
                        {% endif %}
                        <div class="uk-margin">
                            <div class="uk-inline uk-width-1-1">
                                <span class="uk-form-icon" uk-icon="icon: user"></span>
                                {{ form_widget(form.name) }}
                            </div>
                        </div>
                    </div>
                    <div class="uk-width-1-1">
                        {% if form_errors(form.color) %}
                            <div class="formError">{{form_errors(form.color)}}</div>
                        {% endif %}
                        <div class="uk-margin">
                            <div class="uk-inline uk-width-1-1">
                                <span class="uk-form-icon" uk-icon="icon: user"></span>
                                {{ form_widget(form.color) }}
                            </div>
                        </div>
                    </div>
                    <div class="uk-width-1-1">
                        <button type="submit" class="uk-button uk-button-primary uk-width-1-1 uk-margin-small-bottom">Ajouter la categorie</button>
                    </div>
                {{ form_end(form) }}
            </form>
        </div>
    </div>
    <div class="uk-section">
        <div class="uk-container">
            <h3>Mes cat√©gories</h3>
            <div class="uk-grid-match uk-child-width-1-1" uk-grid>
                {% for category in categories %}
                <div class="uk-margin {{category.color}}">
                    <div class="uk-width-1-3">
                        <p>{{category.name}}</p>
                    </div>
                    <div class="uk-width-1-3">
                        <p>{{category.color}}</p>
                    </div>
                    <div class="uk-width-1-3">
                        <p>Modifier</p>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
</main>
{% endblock %}
